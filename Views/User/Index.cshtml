@model IEnumerable<userprofileapp.Models.User>

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>All Users</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f0f2f5;
            padding: 40px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        a.edit-link {
            color: #007bff;
            text-decoration: none;
        }

        a.edit-link:hover {
            text-decoration: underline;
        }

        .create-btn {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            text-decoration: none;
            margin-top: 10px;
        }

        .create-btn:hover {
            background-color: #45a049;
        }

        .no-users {
            text-align: center;
            font-style: italic;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>All Users</h2>

        @if (Model != null && Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Last Name</th>
                        <th>Country</th>
                        <th>State</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Country</td>
                            <td>@user.State</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = user.Id.ToString() })" class="edit-link">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-users">No user profiles found.</p>
        }

        <a href="@Url.Action("Create")" class="create-btn">Create New User</a>
    </div>
</body>
</html>
